{% extends "layouts/hashtag.html.twig" %}

{% block content %}

    <section id="main-content">
        <div id="photos" class="container-fluid">
            {% if success == false %}
                <div class="row">
                    <div class="alert alert-danger" role="alert">
                        {{ message }}
                    </div>
                </div>

            {% else %}

                {% set index = 0 %}

                {% for i in 0..4 %}
                    <div class="row">
                        {% for j in 0..3 %}
                            <div class="col-xs-3 no-padding">
                                <img src="{{ result[index].images.standard_resolution.url }}" class="img-responsive" />
                                {% set index = index + 1 %}
                            </div>
                        {% endfor %}
                    </div>
                {% endfor %}

            {% endif %}
        </div>

        <br />

        <div class="row">
            <div id="tag_info" hashtag="{{ hashtag }}" data_max_tag_id="{{ pagination.max_tag_id }}"></div>

            <div id="loading" class="col-md-2 col-md-offset-5">
                <img class="pull-left" src="{{ assetUri }}/assets/global/img/ajax-loader-4whitebg.gif" alt=""/>
                <p class="pull-left">Loading...</p>
            </div>

        </div>

        <div class="row">
            <div id="message" class="col-md-2 col-md-offset-5"></div>
        </div>

    </section>


{% endblock content %}